{
    "name": "geekstudio",
    "title": "GeekStudio",
    "displayName": "GeekStudio",
    "productName": "Geek Studio",
    "description": "Building and Scaling Real-Time Robot-Human Interaction Applications",
    "publisher": "GEEKROS",
    "version": "0.1.0",
    "author": "MakerYang <www.makeryang.com>",
    "license": "MIT",
    "type": "module",
    "main": "release/dist/main/index.cjs",
    "scripts": {
        "dev": "electron-rebuild -f -w && rimraf release && cross-env SCRIPT_MODE=dev node --max-old-space-size=6096 tools/index.mjs",
        "build": "electron-rebuild -f -w && rimraf release && cross-env SCRIPT_MODE=build node --max-old-space-size=6096 tools/index.mjs",
        "win64": "electron-builder --win --x64",
        "win32": "electron-builder --win --ia32",
        "mac": "electron-builder --mac --x64",
        "linux": "electron-builder --linux --amd64",
        "postinstall": "electron-builder install-app-deps"
    },
    "env": {
        "DEV_SERVER_HOST": "localhost",
        "DEV_SERVER_PORT": 9090,
        "DEV_BACKEND_HOST": "https://backend.domain.com",
        "LOCAL_STORAGE_PREFIX": "template",
        "DESKTOP_USERAGENT": "Mozilla/5.0 ($platform) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/132.0.0.0 Safari/537.36 MicroMessenger/1.0.0 Chromiums/$version",
        "DESKTOP_NETWORK_PAC_URL": "",
        "DESKTOP_NETWORK_FILE_NAME": ""
    },
    "engines": {
        "vscode": "^1.102.0"
    },
    "categories": [
        "Other"
    ],
    "icon": "release/dist/icons/icon.png",
    "homepage": "https://www.geekros.com",
    "bugs": {
        "url": "https://github.com/geekros/studio/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/geekros/studio"
    },
    "keywords": [
        "Geek Studio",
        "geekros",
        "GeekStudio",
        "geekstudio",
        "geek studio",
        "robot",
        "Robot",
        "STM32",
        "GD32",
        "APM32",
        "ESP",
        "ESP32",
        "ESP8266",
        "platformIO",
        "RT-Thread",
        "arm",
        "armcc",
        "gcc",
        "RDK X3",
        "RDK X5",
        "RDK S100",
        "RDKX3",
        "RDKX5",
        "RDKS100",
        "NodeHUB",
        "cortex-m",
        "HarmonyOS",
        "OpenHarmony"
    ],
    "activationEvents": [],
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "geekstudio",
                    "title": "GeekStudio",
                    "icon": "renderer/public/icons/icon.svg"
                }
            ]
        },
        "views": {
            "geekstudio": [
                {
                    "type": "webview",
                    "id": "geekstudio.sidebar",
                    "name": "GeekStudio",
                    "icon": "renderer/public/icons/icon.svg"
                }
            ]
        },
        "commands": [
            {
                "command": "geekstudio:start",
                "title": "geekstudio:start",
                "shortTitle": "111",
                "category": "GEEKROS"
            }
        ]
    },
    "build": {
        "appId": "com.geekros.studio",
        "productName": "geekstudio",
        "asar": true,
        "buildDependenciesFromSource": true,
        "directories": {
            "output": "release/${version}"
        },
        "fileAssociations": [],
        "publish": [
            {
                "provider": "generic",
                "url": ""
            }
        ],
        "files": [
            "release/dist"
        ],
        "dmg": {
            "contents": [
                {
                    "x": 410,
                    "y": 150,
                    "type": "link",
                    "path": "/Applications"
                },
                {
                    "x": 130,
                    "y": 150,
                    "type": "file"
                }
            ]
        },
        "mac": {
            "icon": "renderer/public/icons/macos.icns",
            "artifactName": "${productName}_Setup_${version}.${ext}"
        },
        "win": {
            "icon": "renderer/public/icons/windows.ico",
            "artifactName": "${productName}_Setup_${version}.${ext}",
            "target": "nsis",
            "requestedExecutionLevel": "highestAvailable"
        },
        "linux": {
            "icon": "renderer/public/icons/linux.icns",
            "target": [
                "deb"
            ],
            "artifactName": "${productName}_Setup_${version}.${ext}"
        },
        "nsis": {
            "oneClick": false,
            "perMachine": true,
            "allowElevation": true,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "installerIcon": "renderer/public/icons/windows.ico",
            "uninstallerIcon": "renderer/public/icons/windows.ico",
            "shortcutName": "GeekStudio"
        }
    },
    "dependencies": {
        "@radix-ui/react-avatar": "^1.1.10",
        "@radix-ui/react-dropdown-menu": "^2.1.15",
        "@radix-ui/react-icons": "^1.3.2",
        "@radix-ui/react-scroll-area": "^1.2.9",
        "@radix-ui/react-select": "^2.2.5",
        "@radix-ui/react-separator": "^1.1.7",
        "@radix-ui/react-slot": "^1.2.3",
        "@radix-ui/react-tooltip": "^1.2.7",
        "@tailwindcss/typography": "^0.5.16",
        "@tailwindcss/vite": "^4.1.11",
        "axios": "^1.10.0",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "electron-debug": "^3.2.0",
        "electron-devtools-installer": "^4.0.0",
        "electron-localstorage": "^1.0.5",
        "electron-store": "^8.2.0",
        "electron-updater": "^6.3.9",
        "i18next": "^25.3.2",
        "i18next-http-backend": "^3.0.2",
        "lucide-react": "^0.525.0",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "react-i18next": "^15.6.0",
        "react-router-dom": "^7.6.3",
        "request": "^2.88.2",
        "tailwind-merge": "^3.3.1",
        "tailwindcss": "^4.1.11",
        "tailwindcss-animate": "^1.0.7",
        "tw-animate-css": "^1.3.5",
        "uuid": "^11.1.0"
    },
    "devDependencies": {
        "@types/node": "^24.0.13",
        "@types/react": "^19.1.8",
        "@types/react-dom": "^19.1.6",
        "@types/vscode": "^1.102.0",
        "@types/vscode-webview": "^1.57.5",
        "@types/yargs": "^17.0.33",
        "@vitejs/plugin-react": "^4.6.0",
        "chalk": "^5.4.1",
        "cross-env": "^7.0.3",
        "electron": "34.4.1",
        "electron-builder": "^25.1.8",
        "electron-rebuild": "^3.2.9",
        "globals": "^16.3.0",
        "rimraf": "^6.0.1",
        "terser": "^5.43.1",
        "typescript": "~5.8.3",
        "vite": "^7.0.4",
        "vite-plugin-chunk-split": "^0.5.0",
        "yargs": "^18.0.0"
    }
}
